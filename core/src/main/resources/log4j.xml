<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}]%m%n"/>
        </layout>
    </appender>

    <appender name="windLog" class="RequestScopeAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}]%m%n"/>
        </layout>
    </appender>

    <logger name="com.wind" additivity="false">
        <level value="info"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="Log" additivity="false">
        <level value="debug"/>
        <appender-ref ref="windLog"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.hibernate.SQL" additivity="false">
        <level value="debug"/>
        <appender-ref ref="windLog"/>
    </logger>

    <!--<logger name="org.hibernate.cache" additivity="false">-->
    <!--<level value="debug"/>-->
    <!--<appender-ref ref="sample"/>-->
    <!--</logger>-->

    <logger name="org.apache.tomcat.util.http.Parameters" additivity="false">
        <level value="FATAL"/>
        <appender-ref ref="console"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </root>
</log4j:configuration>
